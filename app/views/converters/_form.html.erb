<%= form_for @converter, method: :get, url: convert_path do |f| %>
  <% if @converter.errors.any? %>
    <section id='error_explanation'>
      <h2><%= pluralize(@converter.errors.count, 'error') %> prevented this conversion:</h2>

      <ul>
      <% @converter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </section>
  <% end %>

  <section class='field'>
    <%= f.label :bibid, 'bib id:' %>
    <%= f.text_field :bibid %>
  </section>
  
  <section class='field'>
    <%= f.label :format, 'Serialization format:' %>
    <%= f.select(:serialization, ConvertersHelper::SERIALIZATION_FORMATS.sort_by { |format, value| value[:weight] }.map {|serialization, value| [value[:form_label], serialization]}) %>
  </section>
  
  <section class='field'>
    <%= check_box_tag :export %>
    <%= label_tag :export, 'Export' %>
  </section>

  <section class='field'>
    <%#= f.label :save, 'Save to triplestore' %>
    <%# f.check_box :save %>
  </section>
    
  <section class='actions'>
    <%= f.submit 'convert', id: :submit %>
  </section>
  
<% end %>
